#menu
  - if logged_in?
    .btn-group
      = link_to '#', class: 'btn btn-primary' do
        %i.icon-user.icon-white
        = current_user

      = link_to '#', data: {toggle: 'dropdown'}, class: 'btn btn-primary dropdown-toggle' do
        %span.caret

      %ul.dropdown-menu
        %li
          = link_to timeline_path(current_user) do
            %i.icon-tasks
            Timeline

        %li
          = link_to mentions_user_path do
            %i.icon-thumbs-up
            Your mentions

        %li
          = link_to edit_user_path do
            %i.icon-wrench
            Settings

    .btn-group
      %li= button_to 'Logout', session_path, method: :delete, class: 'btn btn-danger logout', confirm: 'Are you sure you want to logout?'

  - else
    = render 'sessions/form'
